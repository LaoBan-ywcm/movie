extends layout

block content
    .container
        .row
            table.table.table-hover.table-bordered.table-responsive
                thead
                    tr
                        th 名字
                        th 时间
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in categories
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                            td: a.btn(target='_black',href="/movie/#{item._id}") 查看
                            td: a.btn(target='_black',href="/admin/update/#{item._id}") 修改
                            td: button.btn.btn-danger.del-category(type="button",data-id="#{item._id}") 删除
    script(src="/javascripts/admin.js")













