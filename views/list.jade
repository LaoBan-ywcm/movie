extends layout

block content
    .container
        .row
            table.table.table-hover.table-bordered.table-responsive
                thead
                    tr
                        th 电影名字
                        th 导演
                        th 国家
                        th 语言
                        th 类型
                        th 上映年份
                        th 录入时间
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in movies
                        tr(class="item-id-#{item._id}")
                            td #{item.title}
                            td #{item.doctor}
                            td #{item.country}
                            td #{item.language}
                            td #{item.category}
                            td #{item.year}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                            td: a.btn(target='_black',href="/movie/#{item._id}") 查看
                            td: a.btn(target='_black',href="/admin/movie/update/#{item._id}") 修改
                            td: button.btn.btn-danger.del-movie(type="button",data-id="#{item._id}") 删除


    script(src="/javascripts/admin.js")











